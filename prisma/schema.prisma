generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
  model Project {
    id          String      @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    oneLiner    String
    logo        String
    screenshot  String
    projectType String
    liveURL     String
    description String
    techStack   Json[]
    keywords    Json[]
  }
 
  model Certification {
  id                String      @id @default(auto()) @map("_id") @db.ObjectId
  title             String
  organizationName  String
  completionDate    DateTime
  credentialID      String
  certificateUrl    String
  screenshot        String
  learned           Json[]
  }
 
  model Experience {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  positionName     String
  companyName     String
  companyLocation    String
  startDate   DateTime
  endDate     DateTime
  learned     Json[]
  }
